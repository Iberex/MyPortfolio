---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
---

<BaseLayout>
  <main class="hero">
    <h2 class="hero-top">Hello wOrLd,</h2>
    <h2 class="hero-bottom">I'm ibE</h2>
    <div class="hero-corner">DIGITAL CREATOR SINCE <span class="corner-year">2024</span></div>
  </main>

  <section class="intro">
